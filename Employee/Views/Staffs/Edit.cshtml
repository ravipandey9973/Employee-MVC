@model Employee.Models.Entities.Staff
<h1>Edit Student Data</h1>
<form method="post">
<div class="mt-3">
    <label class="form-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" readonly />
</div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" placeholder="Enter name " asp-for="Name" class="form-control" />
    </div>

    <div class="mt-3">
        <label class="form-label">Department</label>
        <input type="text" placeholder="Enter Department " asp-for="Department" class="form-control" />
    </div>

    <div class="mt-3">
        <label class="form-label">DateOfJoining</label>
        <input type="date"  asp-for="DateOfJoining" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class=" form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" >Subscribed</label>
    </div>

    <div >
      <button type="submit" class="btn btn-primary"  >Update</button>
      <button asp-controller="Staffs" asp-action="Delete"  class=" btn btn-danger">Delete</button>
    </div>
</form>